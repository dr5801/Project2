
#include <pthread.h>
#include <stdio.h>
#include <stdlib.h>
#include <semaphore.h>
#include <string.h>
#include <ctype.h>
#include <stdbool.h>
#include <time.h>
#include <unistd.h>

#ifndef MAX_NUM_THREADS
#define MAX_NUM_THREADS 10
#endif // MAX_NUM_THREADS

/* Contains all the info related to each thread */
typedef struct THREAD_INFO {
	int thread_ID;
	int execution_time;
	int period_for_thread;
	bool is_done;
}THREAD;

THREAD **list_of_threads;
pthread_t this_thread[MAX_NUM_THREADS];

int num_of_threads;
int sec_to_run;

bool Check_Num_Threads(int num_of_threads);
void Request_Execution_And_Period_Times();
